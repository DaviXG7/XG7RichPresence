{
  "name": "xg7-dc-rich-presence",
  "version": "0.0.1",
  "main": "dist/main.js",
  "devDependencies": {
    "@types/discord-rpc": "^4.0.9",
    "@types/node": "^24.5.2",
    "electron": "^38.3.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@xhayper/discord-rpc": "^1.3.0",
    "colors": "^1.4.0",
    "discord.js": "^14.22.1"
  },
  "build": {
    "appId": "com.seu.usuario.xg7dcrp",
    "productName": "XG7 DC Rich Presence",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "arch": [
        "x64",
        "ia32"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
